{% block sqlitoolbox_field %}
    ({{ field.value.getClassName() }}, {{ field.value.getPkKey() }}, {{ field.value.getPkValue() }})
    {%  if field.value.getClassName() is defined and field.value.getClassName() != null
        and field.value.getPkKey() is defined and field.value.getPkKey() != null
        and field.value.getPkValue() is defined and field.value.getPkValue() != null  %}
        {% set compound_id= [] |merge( { (field.value.getPkKey()):field.value.getPkValue() } ) %}
        <a href="{{ path( 'sqli_eztoolbox_entitymanager_entity_view_element',
            { 'fqcn': field.value.getClassName(), 'compound_id': compound_id|json_encode }) }}">
            <svg class="ibexa-icon ibexa-icon-view" style="width: 1.5rem;height: 1.5rem;">
                <use xmlns:xlink="http://www.w3.org/1999/xlink"
                     xlink:href="/bundles/ibexaadminui/img/ibexa-icons.svg#view"></use>
            </svg>
        </a>
    {% endif %}

{% endblock %}
